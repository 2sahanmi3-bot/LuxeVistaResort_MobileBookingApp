<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Profile Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/profile_header_bg"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="32dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_profile_placeholder"
                android:background="@drawable/circle_white"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Profile Image"
                android:padding="2dp"
                app:shapeAppearanceOverlay="@style/CircleImageView"/>

            <TextView
                android:id="@+id/profile_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nickname"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- User Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/blue_primary"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="becca@gmail.com"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <!-- Options Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="12dp">

            <Button
                android:id="@+id/btn_change_profile_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Profile Image"
                android:drawableStart="@drawable/ic_profile_placeholder"
                android:backgroundTint="@color/blue_light"
                android:textColor="@color/blue_primary"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btn_booking_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Booking History"
                android:drawableStart="@drawable/ic_history"
                android:backgroundTint="@color/blue_light"
                android:textColor="@color/blue_primary"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btn_service_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Service History"
                android:drawableStart="@drawable/ic_history"
                android:backgroundTint="@color/blue_light"
                android:textColor="@color/blue_primary"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btn_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:drawableStart="@drawable/ic_password"
                android:backgroundTint="@color/blue_light"
                android:textColor="@color/blue_primary"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btn_change_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Email"
                android:drawableStart="@drawable/ic_email"
                android:backgroundTint="@color/blue_light"
                android:textColor="@color/blue_primary"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btn_set_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Nickname"
                android:drawableStart="@drawable/ic_profile_placeholder"
                android:backgroundTint="@color/blue_light"
                android:textColor="@color/blue_primary"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:drawableStart="@drawable/ic_logout"
                android:backgroundTint="@color/blue_light"
                android:textColor="@color/blue_primary"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView> 