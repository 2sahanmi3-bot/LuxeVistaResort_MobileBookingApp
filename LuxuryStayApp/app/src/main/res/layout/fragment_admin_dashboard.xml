<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Welcome Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#2196F3"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to Admin Dashboard"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage your luxury stay application"
                android:textColor="#E3F2FD"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Overview Cards -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OVERVIEW"
            android:textColor="#666"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <!-- Users Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#4CAF50"
                android:layout_marginEnd="8dp"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘¥"
                    android:textSize="24sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Users"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/total_users_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Bookings Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#FF9800"
                android:layout_marginEnd="8dp"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¨"
                    android:textSize="24sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Bookings"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/total_bookings_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Services Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#9C27B0"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ›Žï¸"
                    android:textSize="24sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Services"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/total_services_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Pending Confirmations Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PENDING CONFIRMATIONS"
            android:textColor="#666"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <!-- Pending Bookings -->
        <LinearLayout
            android:id="@+id/pending_bookings_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/pending_bookings_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“‹ Pending Bookings (0)"
                android:textColor="#FF5722"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"/>


        </LinearLayout>

        <!-- Pending Services -->
        <LinearLayout
            android:id="@+id/pending_services_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/pending_services_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ›Žï¸ Pending Services (0)"
                android:textColor="#FF5722"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"/>


        </LinearLayout>

        <!-- View All Users Button -->
        <Button
            android:id="@+id/view_all_users_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ‘¥ View All Users"
            android:textColor="#FFFFFF"
            android:background="#2196F3"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Send Notification Button -->
        <Button
            android:id="@+id/send_notification_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ“¢ Send Notification to All Users"
            android:textColor="#FFFFFF"
            android:background="#FF9800"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Logout Button -->
        <Button
            android:id="@+id/logout_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Logout"
            android:textColor="#FFFFFF"
            android:background="#F44336"
            android:textSize="14sp"/>

    </LinearLayout>
</ScrollView> 