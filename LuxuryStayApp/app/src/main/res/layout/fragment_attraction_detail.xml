<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <ImageView
            android:id="@+id/iv_attraction_detail_image"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_attraction_detail_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Attraction Name"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#1A3C34"
            app:layout_constraintTop_toBottomOf="@id/iv_attraction_detail_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tv_attraction_detail_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Full description of the attraction."
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_attraction_detail_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_attraction_detail_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category: Adventure"
            android:textSize="14sp"
            android:textColor="#888888"
            app:layout_constraintTop_toBottomOf="@id/tv_attraction_detail_description"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_attraction_detail_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.5 km away"
            android:textSize="14sp"
            android:textColor="#888888"
            app:layout_constraintTop_toBottomOf="@id/tv_attraction_detail_category"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView> 